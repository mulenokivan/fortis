<div class="auth">
  <div class="auth auth__content">

  <h2 class="auth auth__title auth--center-items">Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: 'Email',
                    :label_html => { :class => "input__label input__label--required" },
                    input_html: { autocomplete: "email", class: "input input__field input__field--text" } %>

        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    label: 'Password',
                    :label_html => { :class => "input__label input__label--required" },
                    input_html: { autocomplete: "new-password", class: "input input__field input__field--text" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: 'Password confirmation',
                    :label_html => { :class => "input__label input__label--required" },
                    input_html: { autocomplete: "new-password", class: "input input__field input__field--text" } %>
      </div>

      <div class="form form__group form__group--inline form__group--full-width">
        <%= link_to "Log in", new_session_path(resource_name), class: "btn btn--primary btn--full-width btn--center-items" %>
        <%= f.button :submit, "Sign up", class: "btn btn--primary btn--full-width btn--center-text" %>
      </div>
    <% end %>
  </div>
</div>
