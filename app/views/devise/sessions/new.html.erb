<div class="auth">
  <div class="auth__content">
    <h2 class="auth auth__title auth--center-items">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: 'Email',
                    :label_html => { :class => "input__label input__label--required" },
                    input_html: { autocomplete: "email", class: "input input__field input__field--text" } %>
        <%= f.input :password,
                    required: false,
                    label: 'Password',
                    :label_html => { :class => "input__label input__label--required" },
                    input_html: { autocomplete: "current-password", class: "input input__field input__field--text" } %>
      </div>

      <div class="form-actions">
        <div class="form form__group form__group--inline form__group--full-width">
          <%= f.button :submit, "Log in", class: "btn btn--primary btn--full-width btn--center-text" %>
          <%= link_to "Sign up",
            new_registration_path(resource_name),
            class: "btn btn--primary btn--full-width btn--center-items"
          %>
        </div>
      </div>
    <% end %>
  </div>
</div>